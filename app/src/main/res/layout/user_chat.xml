<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="5dp"
    android:layout_height="match_parent">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:cardBackgroundColor="#fff"
        android:elevation="5dp"
        android:layout_margin="2dp"
        app:cardElevation="5dp"
        app:cardCornerRadius="10dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/userpk"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_gravity="center|left"
                    android:src="@drawable/image_placeholder"
                    android:layout_margin="10dp"

                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:id="@+id/nmus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Momina "
                        android:fontFamily="@font/urdu"
                        android:textColor="#000"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        />
                    <TextView
                        android:id="@+id/number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/nmus"
                        android:layout_marginTop="0dp"
                        android:text="11821"
                        android:paddingLeft="4dp"
                        android:paddingRight="4dp"
                        android:textColor="#000"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/urdu"
                android:padding="5dp"
                android:text="گلاب آنکھیں، شراب آنکھیں
یہی تو ہیں، لاجواب آنکھیں

اِنہیں میں اُلفت، اِنہی میں
کسی نے پائیں سراب آنکھیں

وہ آئے تو لوگ مجھ سے بولے
حضور! آنکھیں۔ جناب! آنکھیں۔
یہ مست مست بے مثال آنکھیں
ہزاروں ان پہ قتل ہوئے ہیں
خدا کے بندے، سنبھال آنکھیں"></TextView>

        </LinearLayout>

    </androidx.cardview.widget.CardView>



</LinearLayout>